<?xml version="1.0" encoding="utf-8"?>
<launch>
  <!-- 参数声明 -->
  <arg name="VERSION" default="1.1.6" description="版本号"/>

  <!-- 左手配置 -->
  <arg name="LEFT_HAND_EXISTS" default="false" description="是否存在左手"/>
  <arg name="LEFT_TOUCH" default="true" description="是否有压力传感器"/>
  <arg name="LEFT_JOINT" default="L7" description="左手关节数 L7 \ L10 \ L20 \ L25"/>

  <!-- 右手配置 -->
  <arg name="RIGHT_HAND_EXISTS" default="true" description="是否存在右手"/>
  <arg name="RIGHT_TOUCH" default="true" description="是否有压力传感器"/>
  <arg name="RIGHT_JOINT" default="L10" description="右手关节数 L7 \ L10 \ L20 \ L25"/>

  <!-- 通用配置 -->
  <arg name="HAND_SPEED" default="50" description="手部运动速度 0 ~ 255"/>

  <!-- 节点启动 -->
  <node pkg="linker_hand_cpp_ros2" exec="linker_hand_node" name="linker_hand_node" output="screen">
    <!-- 参数传递 -->
    <param name="VERSION" value="$(var VERSION)"/>
    <param name="LEFT_HAND_EXISTS" value="$(var LEFT_HAND_EXISTS)"/>
    <param name="LEFT_TOUCH" value="$(var LEFT_TOUCH)"/>
    <param name="LEFT_JOINT" value="$(var LEFT_JOINT)"/>
    <param name="RIGHT_HAND_EXISTS" value="$(var RIGHT_HAND_EXISTS)"/>
    <param name="RIGHT_TOUCH" value="$(var RIGHT_TOUCH)"/>
    <param name="RIGHT_JOINT" value="$(var RIGHT_JOINT)"/>
    <param name="HAND_SPEED" value="$(var HAND_SPEED)"/>
  </node>
</launch>
